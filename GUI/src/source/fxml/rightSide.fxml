<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<fx:root type="BorderPane"
         prefHeight="400.0" prefWidth="300.0"
         stylesheets="@../css/light-mode-right-side.css"
         xmlns="http://javafx.com/javafx/24.0.1"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:controller="RightSideController">

    <!-- TOP BAR -->
    <top>
        <FlowPane alignment="CENTER" hgap="10" vgap="5" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>
            <children>
                <Button fx:id="RunProgramBtn" text="Run" onAction="#RunProgramPressed"/>
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Button fx:id="StartDebugBtn" text="Debug" onAction="#StartDebugPressed"/>
                        <Button fx:id="StopDebugBtn" text="Stop" onAction="#StopDebugPressed"/>
                        <Button fx:id="ResumeDebugBtn" text="Resume" onAction="#ResumeDebugPressed"/>
                        <Button fx:id="StepOverDebugBtn" text="Step Over" onAction="#StepOverDebugPressed"/>
                    </children>
                </HBox>
            </children>
        </FlowPane>
    </top>

    <!-- BOTTOM OVERLAY STACK -->
    <bottom>
        <StackPane BorderPane.alignment="CENTER" maxHeight="150">
            <children>
                <TableView fx:id="StatisticsTable">
                    <columns>
                        <TableColumn text="Run"/>
                        <TableColumn text="Level"/>
                        <TableColumn text="Args"/>
                        <TableColumn text="y"/>
                        <TableColumn text="Cycles"/>
                    </columns>
                </TableView>

                <AnchorPane>
                    <children>
                        <HBox alignment="BOTTOM_RIGHT" spacing="5.0"
                              AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0">
                            <children>
                                <Button fx:id="ShowStatisticsBtn" text="Show" onAction="#ShowStatisticsPressed"/>
                                <Button fx:id="RerunBtn" text="Rerun" onAction="#RerunPressed"/>
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </children>
        </StackPane>
    </bottom>

    <!-- CENTER CONTENT -->
    <center>
        <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="VariableTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn text="Name"/>
                                <TableColumn text="Value"/>
                            </columns>
                        </TableView>
                        <Label text="Cycles: ---">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                    </children>
                </VBox>

                <StackPane HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="ExecutionArgumentInput" nodeOrientation="RIGHT_TO_LEFT" editable="true" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn text="Value" onEditCommit="#ExecutionArgumentUpdated"/>
                                <TableColumn text="Argument"/>
                            </columns>
                        </TableView>

                        <AnchorPane>
                            <children>
                                <Button fx:id="AddArgumentBtn" text="Add Argument"
                                        onAction="#AddArgumentPressed"
                                        AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0"/>
                            </children>
                        </AnchorPane>
                    </children>
                </StackPane>
            </children>
            <padding>
                <Insets bottom="5" left="5" right="5" top="5"/>
            </padding>
        </HBox>
    </center>

</fx:root>

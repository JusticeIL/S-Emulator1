<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="500.0" prefWidth="300.0" stylesheets="@../css/light-mode-right-side.css" type="BorderPane" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RightSideController">

    <!-- TOP BAR -->
    <top>
        <FlowPane alignment="CENTER" hgap="10" vgap="5" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>
            <children>
                <Button fx:id="RunProgramBtn" onAction="#RunProgramPressed" text="Run" />
                <HBox alignment="CENTER" spacing="5.0">
                    <children>
                        <Button fx:id="StartDebugBtn" onAction="#StartDebugPressed" text="Debug" />
                        <Button fx:id="StopDebugBtn" onAction="#StopDebugPressed" text="Stop" />
                        <Button fx:id="ResumeDebugBtn" onAction="#ResumeDebugPressed" text="Resume" />
                        <Button fx:id="StepOverDebugBtn" onAction="#StepOverDebugPressed" text="Step Over" />
                    </children>
                </HBox>
            </children>
        </FlowPane>
    </top>

    <!-- BOTTOM OVERLAY STACK -->
    <bottom>
        <StackPane maxHeight="150" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="StatisticsTable">
                    <columns>
                        <TableColumn text="Run" />
                        <TableColumn text="Level" />
                        <TableColumn text="Args" />
                        <TableColumn text="y" />
                        <TableColumn text="Cycles" />
                    </columns>
                </TableView>

                <AnchorPane>
                    <children>
                        <HBox alignment="BOTTOM_RIGHT" spacing="5.0" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0">
                            <children>
                                <Button fx:id="ShowStatisticsBtn" onAction="#ShowStatisticsPressed" text="Show" />
                                <Button fx:id="RerunBtn" onAction="#RerunPressed" text="Rerun" />
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </children>
        </StackPane>
    </bottom>

    <!-- CENTER CONTENT -->
    <center>
        <HBox alignment="CENTER" spacing="5.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="VariableTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn text="Name" />
                                <TableColumn text="Value" />
                            </columns>
                        </TableView>
                        <Label text="Cycles: ---">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Label>
                    </children>
                </VBox>

                <StackPane HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="ExecutionArgumentInput" editable="true" nodeOrientation="RIGHT_TO_LEFT" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn onEditCommit="#ExecutionArgumentUpdated" text="Value" />
                                <TableColumn text="Argument" />
                            </columns>
                        </TableView>

                        <AnchorPane>
                            <children>
                                <Button fx:id="AddArgumentBtn" onAction="#AddArgumentPressed" text="Add Argument" AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0" />
                            </children>
                        </AnchorPane>
                    </children>
                </StackPane>
            </children>
            <padding>
                <Insets bottom="5" left="5" right="5" top="5" />
            </padding>
        </HBox>
    </center>

</fx:root>

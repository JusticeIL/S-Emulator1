<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.SVGPath?>

<BorderPane stylesheets="@../css/light-mode-right-side.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RightSideController">

    <top>
        <FlowPane alignment="CENTER" hgap="30.0" vgap="5" BorderPane.alignment="CENTER">
            <children>
            <Button fx:id="SetUpRunBtn" mnemonicParsing="false" onAction="#SetupNewRunPressed" text="Setup New Run" />
                <Button fx:id="RunProgramBtn" graphicTextGap="10" onAction="#RunProgramPressed">
                    <graphic>
                        <HBox alignment="CENTER" spacing="10">
                            <children>
                                <SVGPath content="M8 6l10 6l-10 6Z" fill="transparent" stroke="black" style="-fx-stroke-width:1; -fx-stroke-linecap:round; -fx-stroke-linejoin:round;" />
                                <Label text="Run" />
                            </children>
                        </HBox>
                    </graphic>
                </Button>

                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="StartDebugBtn" graphicTextGap="10" onAction="#StartDebugPressed" text="Debug">
                            <graphic>
                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <SVGPath content="M5.85.146a.5.5 0 0 0-.707.707l.628.628a5.38 5.38 0 0 0-2.64 2.62l-1.33-.999a.5.5 0 1 0-.6.8l1.58 1.19a5.4 5.4 0 0 0-.141.899l-.144 2.01h-2a.5.5 0 0 0 0 1h1.93l-.001.015c-.08 1.13.18 2.2.69 3.12l-1.84.921a.5.5 0 0 0 .448.895l1.96-.982c1.02 1.24 2.57 2.03 4.31 2.03s3.29-.796 4.31-2.03l1.96.982a.5.5 0 1 0 .447-.895l-1.84-.92c.51-.916.77-1.99.69-3.12V9h1.93a.5.5 0 0 0 0-1h-2l-.144-2.01a5.4 5.4 0 0 0-.141-.899l1.58-1.19a.5.5 0 1 0-.6-.8l-1.33.999a5.4 5.4 0 0 0-2.64-2.62l.628-.628a.5.5 0 0 0-.707-.707l-.981.981Q8.59 1.001 7.985 1c-.606-.001-.79.044-1.17.127L5.834.146zm6.51 5.91l.216 3.03a4.58 4.58 0 0 1-4.58 4.91c-2.66 0-4.76-2.26-4.58-4.91l.216-3.03q.01-.145.03-.288c.191.13.434.279.73.427c.811.406 2.01.803 3.6.803s2.79-.397 3.6-.803c.296-.148.54-.297.73-.427q.02.143.03.288zm-.307-1.33a4.37 4.37 0 0 0-8.1 0q.053.044.133.104c.166.125.422.296.767.468c.689.344 1.74.697 3.15.697s2.46-.353 3.15-.697a5 5 0 0 0 .9-.572" fill="black" />
                                    </children>
                                </HBox>
                            </graphic>
                        </Button>

                        <Button fx:id="StopDebugBtn" graphicTextGap="10" onAction="#StopDebugPressed" text="Stop">
                            <graphic>
                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <SVGPath content="M11.5 3h-7A1.5 1.5 0 0 0 3 4.5v7A1.5 1.5 0 0 0 4.5 13h7a1.5 1.5 0 0 0 1.5-1.5v-7A1.5 1.5 0 0 0 11.5 3" fill="transparent" stroke="black" style="-fx-stroke-width:1;" />
                                    </children>
                                </HBox>
                            </graphic>
                        </Button>

                        <Button fx:id="ResumeDebugBtn" graphicTextGap="10" onAction="#ResumeDebugPressed" text="Resume">
                            <graphic>
                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <SVGPath content="M3.05 2.75a.55.55 0 1 0-1.1 0v9.5a.55.55 0 0 0 1.1 0zm2.683-.442A.5.5 0 0 0 5 2.75v9.5a.5.5 0 0 0 .733.442l9-4.75a.5.5 0 0 0 0-.884zM6 11.42V3.579L13.429 7.5z" fill="black" />
                                    </children>
                                </HBox>
                            </graphic>
                        </Button>

                        <Button fx:id="StepOverDebugBtn" graphicTextGap="10" onAction="#StepOverDebugPressed">
                            <graphic>
                                <HBox alignment="CENTER" spacing="10">
                                    <children>
                                        <SVGPath content="M18.4 10.6C16.55 9 14.15 8 11.5 8c-4.65 0-8.58 3.03-9.96 7.22L3.9 16a8 8 0 0 1 7.6-5.5c1.95 0 3.73.72 5.12 1.88L13 16h9V7z" fill="black" />
                                        <Label text="Step Over" />
                                    </children>
                                </HBox>
                            </graphic>
                        </Button>

                    </children>
                </HBox>
            </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
        </FlowPane>
    </top>

    <bottom>
        <StackPane prefWidth="555.0" BorderPane.alignment="CENTER">
            <children>
                <TableView fx:id="StatisticsTable">
                    <columns>
                        <TableColumn fx:id="runNumberColumn" text="Run" />
                        <TableColumn fx:id="expansionLevelColumn" text="Level" />
                        <TableColumn text="Args" fx:id="xInputArgumentsColumn" />
                        <TableColumn fx:id="yOutputColumn" text="y" />
                        <TableColumn fx:id="cyclesConsumedColumn" text="Cycles" />
                    </columns>
                    <!-- placeholder kept simple so CSS can style it -->
                    <placeholder>
                        <Label text="No program loaded." />
                    </placeholder>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                </TableView>

                <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" StackPane.alignment="BOTTOM_RIGHT">
                    <children>
                        <HBox alignment="BOTTOM_RIGHT" fillHeight="false" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="5.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0">
                            <children>
                                <Button fx:id="ShowStatisticsBtn" onAction="#ShowStatisticsPressed" text="Show" />
                                <Button fx:id="RerunBtn" onAction="#RerunPressed" text="Rerun" />
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
        </StackPane>
    </bottom>

    <center>
        <HBox alignment="CENTER" minHeight="200.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <VBox alignment="TOP_CENTER" spacing="10.0" HBox.hgrow="ALWAYS">
                    <children>
                        <TableView fx:id="variableTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="resultVariableNameCollumn" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="Name" />
                                <TableColumn fx:id="resultVariableValueCollumn" maxWidth="1.7976931348623157E308" minWidth="80.0" prefWidth="-1.0" text="Value" />
                            </columns>
                            <placeholder>
                                <Label text="No program loaded." />
                            </placeholder>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                        </TableView>

                        <Label fx:id="cyclesLabel" text="Cycles: ---" />
                    </children>
                </VBox>
                  <TableView fx:id="executionArgumentInput" nodeOrientation="LEFT_TO_RIGHT">
                      <columns>
                          <TableColumn fx:id="argumentNamesColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="100.0" prefWidth="-1.0" sortable="false" text="Argument Name" />
                          <TableColumn fx:id="argumentValuesColumn" maxWidth="1.7976931348623157E308" minWidth="100.0" onEditCommit="#ExecutionArgumentUpdated" prefWidth="-1.0" sortable="false" text="Value" />
                      </columns>
                      <placeholder>
                          <Label text="No program loaded." />
                      </placeholder>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
                  </TableView>
            </children>
         <BorderPane.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </BorderPane.margin>
        </HBox>
    </center>

</BorderPane>

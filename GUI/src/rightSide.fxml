<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root prefHeight="600.0" prefWidth="800.0" stylesheets="@light-mode-right-side.css" type="BorderPane" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RightSideController">

    <!-- TOP BAR -->
    <top>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" hgap="20.0" prefHeight="60.0" vgap="10" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
         <children>
            <Button fx:id="RunProgramBtn" mnemonicParsing="false" onAction="#RunProgramPressed" text="Run" />
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="350.0" spacing="20.0">
               <children>
                  <Button fx:id="StartDebugBtn" mnemonicParsing="false" onAction="#StartDebugPressed" text="Debug" />
                  <Button fx:id="StopDebugBtn" mnemonicParsing="false" onAction="#StopDebugPressed" text="Stop" />
                  <Button fx:id="ResumeDebugBtn" mnemonicParsing="false" onAction="#ResumeDebugPressed" text="Resume" />
                  <Button fx:id="StepOverDebugBtn" mnemonicParsing="false" onAction="#StepOverDebugPressed" text="Step Over" />
               </children>
            </HBox>
         </children>
        </FlowPane>
    </top>

    <!-- BOTTOM OVERLAY STACK -->
    <bottom>
        <StackPane prefHeight="200.0" BorderPane.alignment="CENTER">
            <children>

                <!-- Bottom TableView -->
                <TableView fx:id="StatisticsTable">
                    <columns>
                        <TableColumn prefWidth="100.0" text="Run number" />
                        <TableColumn prefWidth="100.0" text="Expansion Level" />
                        <TableColumn prefWidth="300.0" text="Input arguments" />
                  <TableColumn prefWidth="150.0" text="y Value" />
                  <TableColumn prefWidth="150.0" text="Cycles" />
                    </columns>
                </TableView>

                <!-- Overlay with a button bottom-right -->
                <AnchorPane>
                    <children>
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0">
                     <children>
                              <Button fx:id="ShowStatisticsBtn" onAction="#ShowStatisticsPressed" prefHeight="30.0" prefWidth="80.0" text="Show" />
                        <Button fx:id="RerunBtn" onAction="#RerunPressed" prefHeight="30.0" prefWidth="80.0" text="Rerun" />
                     </children>
                  </HBox>
                    </children>
                </AnchorPane>

            </children>
        </StackPane>
    </bottom>
   <center>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
              <VBox alignment="TOP_CENTER" fillWidth="false" spacing="50.0" HBox.hgrow="SOMETIMES">
               <children>
                  <TableView fx:id="VariableTable" prefHeight="200.0" prefWidth="400.0">
                    <columns>
                      <TableColumn prefWidth="150.0" text="Variable Name" />
                      <TableColumn prefWidth="250.0" text="Value" />
                    </columns>
                  </TableView>
                  <Label alignment="CENTER" text="Cycles: ---">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
              </VBox>
            <StackPane>
               <children>
                      <TableView fx:id="ExecutionArgumentInput" nodeOrientation="RIGHT_TO_LEFT" prefHeight="300.0" prefWidth="250.0">
                          <columns>
                              <TableColumn onEditCommit="#ExecutionArgumentUpdated" prefWidth="100.0" text="Value" />
                              <TableColumn prefWidth="150.0" text="Execution argument" />
                          </columns>
                      </TableView>
                  <AnchorPane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="AddArgumentBtn" alignment="BOTTOM_RIGHT" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#AddArgumentPressed" prefHeight="0.0" prefWidth="100.0" text="Add Argument" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="220.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="250.0" />
                     </children>
                  </AnchorPane>
               </children>
            </StackPane>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </HBox>
   </center>

</fx:root>

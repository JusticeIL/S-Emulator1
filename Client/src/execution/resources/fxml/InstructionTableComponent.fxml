<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>

<TableView fx:id="leftSideInstructionTables" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="execution.controller.InstructionTableController">
    <columns>
        <TableColumn fx:id="idColumn" maxWidth="80.0" minWidth="-Infinity" prefWidth="40.0" resizable="false" text="#" />
        <TableColumn fx:id="TypeColumn" maxWidth="80.0" minWidth="-Infinity" prefWidth="50.0" resizable="false" text="Type" />
        <TableColumn fx:id="LabelColumn" maxWidth="80.0" minWidth="-Infinity" prefWidth="50.0" resizable="false" text="Label" />
        <TableColumn fx:id="instructionColumn" maxWidth="1.7976931348623157E308" prefWidth="200.0" text="Instruction" />
        <TableColumn fx:id="cyclesColumn" maxWidth="100.0" minWidth="-Infinity" prefWidth="50.0" resizable="false" text="Cycles" />
    </columns>

    <placeholder>
        <Label text="No program loaded." textAlignment="CENTER" wrapText="true" />
    </placeholder>

    <columnResizePolicy>
        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
    </columnResizePolicy>
</TableView>
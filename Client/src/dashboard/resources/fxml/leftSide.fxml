<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<SplitPane dividerPositions="0.5" orientation="VERTICAL" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dashboard.controller.LeftSideController">
  <items>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
         <children>
            <StackPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <TableView fx:id="usersTable" prefHeight="200.0" prefWidth="200.0">
                      <placeholder>
                          <Label text="No users to display." />
                      </placeholder>
                    <columns>
                      <TableColumn prefWidth="-1.0" text="Username" />
                      <TableColumn prefWidth="105.0" text="Programs Loaded" />
                        <TableColumn prefWidth="105.0" text="Functions Loaded" />
                        <TableColumn prefWidth="50.0" text="Credits" />
                        <TableColumn prefWidth="85.0" text="Credits Used" />
                        <TableColumn prefWidth="65.0" text="Executions" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>

                   <!-- Button anchored to bottom-right with 20px padding -->
                  <AnchorPane StackPane.alignment="BOTTOM_RIGHT">
                     <children>
                        <Button fx:id="unselectUserBtn" alignment="BOTTOM_RIGHT" contentDisplay="CENTER" mnemonicParsing="false" onAction="#unselectUser" text="Unselect user" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="248.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="131.0" />
                     </children>
                  </AnchorPane>
               </children>
            </StackPane>
         </children></AnchorPane>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0">
         <children>
            <TableView fx:id="userExecutionsTable" layoutX="299.0" layoutY="36.0" prefHeight="200.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                <placeholder>
                    <Label text="No user has been chosen yet." />
                </placeholder>
              <columns>
                <TableColumn prefWidth="50.0" text="Run" />
                <TableColumn prefWidth="110.0" text="Program/Function" />
                  <TableColumn prefWidth="-1.0" text="Program Name" />
                  <TableColumn prefWidth="105.0" text="Architecture Type" />
                  <TableColumn prefWidth="50.0" text="Level" />
                  <TableColumn prefWidth="50.0" text="y" />
                  <TableColumn prefWidth="65.0" text="Cycles" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children></AnchorPane>
  </items>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</SplitPane>

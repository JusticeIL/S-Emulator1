<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="480.0" prefWidth="640.0" stylesheets="@../css/login.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="login.controller.MainController">

    <content>
        <BorderPane prefHeight="Infinity" prefWidth="Infinity">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>

            <!-- TITLE: stays at the very top -->
            <top>
                <Label fx:id="clientApplicationTitle" text="Welcome to S-embly!" BorderPane.alignment="CENTER">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <padding>
                        <Insets bottom="10.0" />
                    </padding>
               <BorderPane.margin>
                  <Insets top="50.0" />
               </BorderPane.margin>
                </Label>
            </top>

            <!-- CENTER: the form column is centered here -->
            <center>
                <VBox alignment="CENTER" maxWidth="240.0" spacing="12.0" BorderPane.alignment="CENTER">
                    <children>
                        <TextField fx:id="usernameField" maxWidth="Infinity" prefWidth="200.0" promptText="Enter username..." />

                        <Button fx:id="registerUserBtn" maxWidth="Infinity" mnemonicParsing="false" onAction="#tryRegisterUserBtn" prefWidth="200.0" text="Register" />
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </content>
</ScrollPane>
